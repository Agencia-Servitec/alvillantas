{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run eslint:check",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "extensions": {
    "storage-resize-images": "firebase/storage-resize-images@0.1.22",
    "firestore-bigquery-export-vrtl": "firebase/firestore-bigquery-export@0.1.20",
    "firestore-bigquery-export": "firebase/firestore-bigquery-export@0.1.20"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}
